@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="Configuration.Theme" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        AgencyManager
        <MudSpacer/>
        <MudSwitch @bind-Value="@_isDarkMode" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private bool _isDarkMode = true;
}